<script>

    //  Cart Count :-

    cartAction()
    
    function cartAction(){

        const cartt = document.getElementById('cart')

        fetch('/cartAction' , {method : 'post'}).then(data=>data.json()).then(data =>{

            cartt.textContent = data.success || 0

            
        })

    };

</script>